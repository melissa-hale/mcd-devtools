{
  "manifest_version": 3,
  "name": "MCD Devtools",
  "description": "Monte Carlo Data DevTools",
  "version": "1.0",
  "author": "Monte Carlo Data Solutions Architects",
  "devtools_page": "devtools/mcd-devtools.html",
  "background": {
    "service_worker": "devtools/background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "monte carlo dev tools",
    "default_icon": "hello.png"
  },
  "icons": {
    "16": "assets/images/icon-16.png",
    "32": "assets/images/icon-32.png",
    "48": "assets/images/icon-48.png",
    "128": "assets/images/icon-128.png"
  },
  "permissions": ["scripting", "activeTab", "tabs"],
  "host_permissions": ["https://*.getmontecarlo.com/"],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'; script-src-elem 'self' 'wasm-unsafe-eval'"
  }
}
