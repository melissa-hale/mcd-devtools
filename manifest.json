{
  "manifest_version": 3,
  "name": "MCD Devtools",
  "description": "Monte Carlo Data DevTools",
  "version": "1.0",
  "author": "Monte Carlo Data Solutions Architects",
  "devtools_page": "devtools/mcd-devtools.html",
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "monte carlo dev tools",
    "default_icon": "hello.png"
  },
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "permissions": [
    "scripting",
    "activeTab"
    ],
  "host_permissions": [
    "https://*.getmontecarlo.com/"
  ]
}
